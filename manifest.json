{
  "manifest_version": 3,
  "name": "YouTube Ad Hider + BlockSite",
  "version": "1.1",
  "description": "Blocks YouTube ads and unwanted sites.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "scripting",
    "activeTab",
    "contextMenus"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ad_block_rules",
        "enabled": true,
        "path": "rules/ad_block_rules.json"
      },
      {
        "id": "youtube_ad_block_rules",
        "enabled": true,
        "path": "rules/youtube_ad_block_rules.json"
      },
      {
        "id": "privacy_rules",
        "enabled": true,
        "path": "rules/privacy_rules.json"
      },
      {
        "id": "https_upgrade_rules",
        "enabled": true,
        "path": "rules/https_upgrade_rules.json"
      }
    ]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/site-blocking.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
  "js": ["content/minimal-youtube.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
